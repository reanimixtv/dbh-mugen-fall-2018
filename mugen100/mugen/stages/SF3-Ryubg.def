;──────────────────────────────────────────────
;■駄文２００５．０２．１２
;パレット共有化をおこたった為にパレット変更時(ザ・ワールド等)の影響が反映されなかったので
;パレット共有化して修正

;←とーびーこんてにゅーど
;──────────────────────────────────────────────
;■制作
;時間の国・けい
;──────────────────────────────────────────────
;──────────────────────────────────────────────
;■追伸
;修正者：伊吹川
;とりあえず、MUGEN1.1の拡大縮小に対応。
;4：3ステージです。
;その他ちょこちょこ修正。
;──────────────────────────────────────────────
;☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★☆★
;■すてーじねーむ
[Info]
name= "SF3-Ryu STAGE"    ;ｽﾃｰｼﾞの名前
author = "ibukah"
;Mugen 1.0 conversion by kater15

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;■かめら
[Camera]
startx         = 0                ;一番最初のｶﾒﾗ位置(X軸)
starty         = 0　　　　　　　　;一番最初のｶﾒﾗ位置(Y軸)
boundleft      = -255             ;左画面端の距離
boundright     =  255             ;右画面端の距離
boundhigh      = -120             ;上にｽｸﾛｰﾙする距離。0だとｽｸﾛｰﾙしない
boundlow       = 00　　　　   　　;下画面端の距離
verticalfollow = .3               ;ｼﾞｬﾝﾌﾟした時、ｽﾃｰｼﾞ全体が上下する強さ

;（16:9 = 320:180）（4:3 = 320:240）
tensionhigh =90;画面上部からtensionhigh分の距離にキャラの足元のポイントが来ると画面スクロールが始まる。
tension        = 50               ;ﾄﾞｯﾄ数だけ画面端に行くと、ｽｸﾛｰﾙする
tensionlow = 5;画面上部からtensionhighとtensionlowの合計値の距離にキャラの足元のポイントが来ると拡縮が始まる。
startzoom = 1,1;基準の拡大縮小率（実数）

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;■きゃら
[PlayerInfo]
;--- Player 1 ---
p1startx   = -70                  ;1Pきゃらの最初の立ち位置X軸
p1starty   = 0                    ;1Pきゃらの最初の立ち位置Y軸
p1startz   = 0                    ;使用しない
p1facing   = 1                    ;1Pきゃらの最初の向き。1だと、左向き 
;--- Player 2 ---
p2startx   = 65
p2starty   = 0
p2startz   = 0
p2facing   = -1
;--- Common ---　　　　         　;変える必要無し
leftbound  = -1000
rightbound =  1000
topbound   =  0
botbound   =  0

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;すけーる
[Scaling]
topz     = 0
botz     = 50
topscale = 1
botscale = 1.2

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;ざひょう
[Bound]
screenleft  = 15                  ;左画面端の壁の存在距離
screenright = 15                  ;右画面端の壁の存在距離

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;すてーじじょうほー
[StageInfo]
zoffset  = 215
autoturn = 1                       ;ｷｬﾗが自動的に振り向くか(1で振り向く。基本的に1
resetBG  = 0                       ;ﾗｳﾝﾄﾞ終了後ｱﾆﾒをﾘｾｯﾄするか(1でon)
localcoord = 320, 240

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;かげ
[Shadow]
color = 100, 100, 100              ;影のｶﾗｰ
yscale = .1                        ;影のｻｲｽﾞ
reflect = 0                        ;影の反射

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;おんがく(音量は機能してるか不明)
[Music]
bgmusic= sound/sf2.mp3          ;ｽﾃｰｼﾞ専用曲の指定(midやmp3やmodが使用可能)
bgvolume = 255                     ;BGMの音量(影響でるの？)

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;画像ふぁいるの指定と残像の有無
[BGdef]
spr=stages/SF3-Ryubg.sff           ;ｽﾃｰｼﾞの画像ﾌｧｲﾙの指定
debugbg = 0  　　　　　　　　      ;1にすると、画像が無い部分に、残像がつかない。

;☆★☆★☆★☆★☆★☆★☆★☆★☆
;すてーじの画像位置等(下に行くごとに優先順位が上がる)

[BG 1]
type     = normal
spriteno = 0, 1
mask     = 1
start    = 0, -90
delta = .3,0.9
velocity = 0, 0
tile = 1, 0
tilespacing = 0, 0

[BG 1]
type     = normal
spriteno = 0, 2
mask     = 1
start    = -150, -90
delta = .7,0.9
velocity = 0, 0
tile = 1, 0
tilespacing = 0, 0

[BG 1]
type     = normal
spriteno = 0, 0
mask     = 1
start    = 0, 10
delta    = 1,1;0.8, 1.0
velocity = 0, 0
tile = 1, 0
tilespacing = 0, 0
